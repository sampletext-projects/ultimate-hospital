<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="700.0" style="-fx-background-color: #6699FF;" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EnterScreenController">
    <children>
        <TextField fx:id="textFieldLogin" layoutX="136.0" layoutY="40.0" prefHeight="31.0" prefWidth="428.0"
                   promptText="Логин">
            <font>
                <Font size="27.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="textFieldPassword" layoutX="136.0" layoutY="124.0" prefHeight="31.0" prefWidth="428.0"
                       promptText="Пароль">
            <font>
                <Font size="27.0"/>
            </font>
        </PasswordField>

        <CheckBox fx:id="checkBoxIsAdmin" layoutX="136.0" layoutY="221.0" mnemonicParsing="false" prefHeight="21.0"
                  prefWidth="150.0" text="Администратор"/>
        <CheckBox fx:id="checkBoxIsDoctor" layoutX="313.0" layoutY="221.0" mnemonicParsing="false" prefHeight="21.0"
                  prefWidth="74.0" text="Врач"/>
        <CheckBox fx:id="checkBoxIsPatient" layoutX="465.0" layoutY="221.0" mnemonicParsing="false" prefHeight="21.0"
                  prefWidth="99.0" text="Пациент"/>

        <Button fx:id="buttonEnter" layoutX="200.0" layoutY="270.0" mnemonicParsing="false" prefHeight="86.0"
                prefWidth="300.0" text="Войти"
        onAction="#onButtonEnterClick">
            <font>
                <Font size="41.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
